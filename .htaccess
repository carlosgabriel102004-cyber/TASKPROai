
# CONFIGURAÇÃO DE ALTO DESEMPENHO E COMPATIBILIDADE
<IfModule mod_headers.c>
    # Permite que o serviço esm.sh leia os arquivos .tsx do seu servidor
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, OPTIONS"
    Header set Access-Control-Allow-Headers "X-Requested-With, Content-Type, Origin, Accept"
    
    # Evita cache durante o desenvolvimento para que você veja as mudanças na hora
    <FilesMatch "\.(tsx|ts|html|js)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

<IfModule mod_mime.c>
    # Informa ao navegador que arquivos .tsx são JavaScript
    AddType application/javascript .tsx
    AddType application/javascript .ts
</IfModule>

# Desabilita listagem de diretórios por segurança
Options -Indexes
